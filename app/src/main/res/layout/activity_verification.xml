<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#E9E1F0"
    android:gravity="center_horizontal"
    tools:context=".VerificationActivity">
    <ImageView
        android:src="@drawable/bg_image"
        android:layout_width="250dp"
        android:scaleType="centerCrop"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:text="OTP verification"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#354A98"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:text="@string/we_will_send_you_an"
            android:layout_marginRight="6dp"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="#706E6E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="@string/one_time_password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#040404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
    <TextView
        android:text="@string/on_this_mobile_number"
        android:layout_marginRight="6dp"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="#706E6E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="15dp"
            android:background="@color/white"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editNumber"
                android:hint="@string/type_your_phone_number"
                android:background="sha"
                android:ems="1"
                android:inputType="phone"
                android:textSize="20sp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold|normal"
                android:textColor="#121212"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </EditText>
            <Button
                android:id="@+id/continueButton"
                android:text="Continue"
                android:textStyle="bold|normal"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#132766">

            </Button>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

  </LinearLayout>